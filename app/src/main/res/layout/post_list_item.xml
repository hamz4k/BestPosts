<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="@dimen/post_item_height"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground"
        android:padding="@dimen/value_16dp">

    <ImageView
            android:id="@+id/post_list_item_user_image"
            android:layout_width="@dimen/value_64dp"
            android:layout_height="@dimen/value_64dp"
            android:contentDescription="@string/avatar"
            android:scaleType="centerCrop"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/post_list_item_title"
            style="@style/TextAppearance.MaterialComponents.Headline6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/value_16dp"
            android:maxLines="2"
            android:ellipsize="end"

            app:layout_constraintBottom_toTopOf="@id/post_list_item_body_snippet"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/post_list_item_user_image"
            app:layout_constraintTop_toTopOf="@id/post_list_item_user_image"

            tools:text="Title"/>

    <TextView
            android:id="@+id/post_list_item_body_snippet"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"

            app:layout_constraintBottom_toBottomOf="@id/post_list_item_user_image"
            app:layout_constraintEnd_toEndOf="@+id/post_list_item_title"
            app:layout_constraintStart_toStartOf="@+id/post_list_item_title"
            app:layout_constraintTop_toBottomOf="@id/post_list_item_title"

            tools:text="Boddy snippet"/>


</androidx.constraintlayout.widget.ConstraintLayout>